{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "jest"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": 0,
    "no-param-reassign": 0
  },
  "overrides": [
    {
      "files": ["src/lambdas/**/index.js"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "packageDir": "./"
          }
        ]
      }
    },
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest/globals": true
      }
    }
  ]
}
